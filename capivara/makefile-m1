CXX = ccache g++
OUTPUT_FILE=bin/capivara

define INCLUDE
	v8/include/
endef

define INCLUDEUV
	libuv/include/
endef

define APP
	app/index.cc
endef
 
define OBJ
	v8/libv8_monolith.a
	libuv/libuv_a-macm1.a
endef

export INCLUDE
export INCLUDEUV
export OUTPUT_FILE

export APP
export LIB
export OBJ
export APP


build:
	mkdir -p bin
	$(CXX) $$APP -I $$INCLUDE -I $$INCLUDEUV  -std=c++17 -pthread -o $$OUTPUT_FILE -DV8_COMPRESS_POINTERS $$OBJ 

$(examples): % : examples/%.cpp
	mkdir -p bin
	$(CXX) $$APP -I $$INCLUDE -I $$INCLUDEUV  -std=c++17 -pthread -o -o bin/$@  $<  -DV8_COMPRESS_POINTERS $$OBJ 

clean:
	rm -rf bin